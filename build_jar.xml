<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?eclipse.ant.import?>
<project default="create_run_jar" name="Create Runnable Jar for Project OrigamiGUI with Jar-in-Jar Loader">
    <!--this file was created by Eclipse Runnable JAR file Export Wizard-->
    <!--ANT 1.7 is required-->
    <!--define folder properties-->
    <property name="dir.buildfile" value="."/>
    <property name="dir.jarfile" value="${dir.buildfile}"/>
    <target name="create_run_jar" depends="build">
        <jar destfile="${dir.jarfile}/Origami SMTP.jar">
            <manifest>
                <attribute name="Main-Class" value="org.eclipse.jdt.internal.jarinjarloader.JarRsrcLoader"/>
                <attribute name="Rsrc-Main-Class" value="application.console.OrigamiGUI"/>
                <attribute name="Class-Path" value="."/>
                <attribute name="Rsrc-Class-Path" value="./ javax.mail.jar jsoup-1.10.2.jar origami.jar"/>
            </manifest>
            <zipfileset src="jar-in-jar-loader.zip"/>
            <fileset dir="${dir.jarfile}/bin"/>
            <zipfileset dir="${dir.jarfile}/jars" includes="javax.mail.jar"/>
            <zipfileset dir="${dir.jarfile}/jars" includes="jsoup-1.10.2.jar"/>
            <fileset dir="${dir.jarfile}/jars"/>
            <zipfileset dir="${dir.jarfile}/jars" includes="origami.jar"/>
        </jar>
    </target>
</project>
